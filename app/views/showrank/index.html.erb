<!doctype html>
<html lang="ja">
<head>
  <meta chrset="utf-8">
  <link rel="stylesheet" type="text/css" href="rank.css">
</head>
<body>
<header>
  <h1>ランキング表</h1>
  <h2><a href="/"><button type="button">ゲームに戻る</button></a></h2>
</header>
<main>
  <section id="inside">
    <div class="boxContainer1">
      <div class="box1">
        <h2 class="rank">順位</h2>
      </div>
      <div class="box1">
        <h2 class="name">名前</h2>
      </div>
      <div class="box1">
        <h2 class="score">スコア</h2>
      </div>
    </div>

    <% @users.each_with_index do |user,i| %>
    <div class="boxContainer2">
      <div class="box2">
        <h3 class="rank"><%= i+1 %></h3>
      </div>
      <div class="box2">
        <h3 class="name"><%= user.username %></h3>
      </div>
      <div class="box2">
        <h3 class="score"><%= user.score %></h3>
      </div>
    </div>
    <% end %>
  </section>
</main>
</body>
</html>